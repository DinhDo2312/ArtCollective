<link rel="stylesheet" href="/css/user.css">

<div class="container">{{this.dataValues.username}}</div>
<div class="container">{{this.dataValues.email}}</div>
<div class="container">{{this.dataValues.bio}}</div>
<div class="container">{{this.dataValues.avatar}}</div>
<a href="/user/{{this.dataValues.id}}/edit">
    <button type="submit" class="btn btn-sm btn-outline-secondary" id='editUserButton' style='font-size: 14px'>Edit Profile</button>
</a>

<div class="personal-container">
    {{#each this.Submissions}}
      {{#switch this.type}}
        {{#case "image"}}
    <div class = "submission-box" data-id="{{this.id}}">
        <h6><span class='title'>{{this.title}}</span></h6>
        <a href="../submission/{{this.id}}"><img class="submission-image" height=168 width=168 src="{{this.file}}"></a>
    </div>
        {{/case}}
        {{#case "text"}}
    <div class = "submission-box" data-id="{{this.id}}">
        <h6><span class='title'>{{this.title}}</span></h6>
        <a href="../submission/{{this.id}}"><img class="submission-image" height=168 width=168 src="/images/text.jpg"></a>
    </div>
        {{/case}}
      {{/switch}}
    {{/each}}
</div>

<script>
    $('#editUserButton').hide();
    console.log("{{this.dataValues.currentUser}}", "+", "{{this.dataValues.id}}");
    if ("{{this.dataValues.currentUser}}" === "{{this.dataValues.id}}") {
      $("#editUserButton").show();
    };
</script>