<link rel="stylesheet" href="/css/create.css">

<div id = 'main'>
  <container class = "container-fluid"> 
    <div class="form-group">
        <label for="artType">Collectives</label>
        <select class="form-control" id="artType">
            {{!-- Populate with a users collectives later --}}
        <option>None</option>
        <option>Collective1</option>
        <option>Collective2</option>
        <option>Collective3</option>
        </select>
    </div>
    <div class="form-group">
        <label for="artType">Art Type</label>
        <select class="form-control" id="artType">
        <option>Text</option>
        <option>Audio</option>
        <option>Image</option>
        </select>
    </div>
    <div>
        <div id='image'></div>
        <button class="btn btn-secondary edit" id='editImage'>EDIT</button>
    </div>

    <div>
    <div id = 'audio'></div>
    <button class="btn btn-secondary edit" id='editAudio'>EDIT</button>
    </div>

    <div id = 'imageInput'>
        <input class="form-control" type="text" id = 'imageURL'>
        <button type="submit" class="btn btn-secondary" id='addImage'>Add Image</button>
    </div>

    <div id = 'audioInput'>
        <input class="form-control" type="text" id = 'audioURL'>
        <button id='addAudio' type="submit" class="btn btn-secondary">Add Audio</button>
    </div>

    <div class="form-group">
        <textarea class="form-control" id="typeText" rows="3"></textarea>
    </div>
    
  </container>
</div>

<script>
    $('#audioInput').hide()
    $('#imageInput').hide()
    $('.edit').hide()

    $('select').on('change',function(event){
        if(this.value == 'Image'){
            $('#imageInput').show()
            $('#audio').empty()
            $('#audioInput').hide()
            $('#editAudio').hide()
        }
        else if(this.value == 'Audio'){
            $('#imageInput').hide()
            $('#image').empty()
            $('#audioInput').show()
            $('#editImage').hide()
       }
       else{
            $('#audio').empty()         
            $('#image').empty()
            $('#audioInput').hide()
            $('#imageInput').hide()
            $('#editAudio').hide()
            $('#editImage').hide()

       }
    });
    //
    $('#addImage').on('click',function(event){
        var imageURL = $('#imageURL').val()
        var newImage = $('<img>').attr('src', imageURL)
        $('#imageInput').hide()
        $('#image').append(newImage)
        $('#editImage').show()
    });
    $('#addAudio').on('click',function(event){
        var audioURL = $('#audioURL').val()
        var newAudio = $('<audio controls>')
        var newSource = $('<source>').attr('src',audioURL)
        newAudio.append(newSource)
        $('#audioInput').hide()
        $('#audio').prepend(newAudio)
        $('#editAudio').show()
    });
    $('#editAudio').on('click',function(event){
        $(this).hide()
        $('#audioInput').show()
        $('#audio').empty()
    })
    $('#editImage').on('click',function(event){
        $(this).hide()
        $('#imageInput').show()
        $('#image').empty()
    })
</script>



